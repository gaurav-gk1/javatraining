package javapgm;

import java.util.*;

public class KidsLaptop {
	static Scanner sc = new Scanner(System.in);
	public static void arithemetic() {
		System.out.println("Choose an option from 1-ADDITION ,2-SUBSTRACTION ,3-MULTIPLICATION ,4-QUIT");
		System.out.println("Enter option");
		int choose=sc.nextInt();  //Allows the kid choose an option
		int a,b;
		int answer;
		if(choose==4) {
			System.out.println("YOU QUIT"); 
		}
		else {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter first number : ");
		a= sc.nextInt();                      //Takes the input for 1st number from the user
		System.out.println("Enter second number : ");
		b= sc.nextInt();                      //Takes the input for 2nd number from the user
		switch(choose) {
		case 1:
			answer = a+b;
			System.out.println("Sum of numbers is : "+answer);
			break;
		case 2:
			answer = a-b;
			System.out.println("Difference of numbers is : "+answer);
			break;
		case 3:
			answer = a*b;
			System.out.println("product of numbers is : "+answer);
			break;
		}
		}	
	
	}
	public static void main(String[] args) {
		arithemetic(); // Calling the method

	}

}
